@section Scripts {
    <script src="~/js/index.js"></script>
    @{
        var originid = ViewBag.originid;
        var destinationid = ViewBag.destinationid;
        var date = ViewBag.date;
    }

    @if (originid != null && destinationid != null)
    {
        <script>
            setLocationCookie('@Html.Raw(originid )', '@Html.Raw(destinationid )', '@Html.Raw(date )');
        </script>
    }
    else
    {
        <script>
            $(function () {
                setTimeout(function () {
                    setLocationDefault();

                }, 1000);

            }); 
        </script>
    } 
